root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 200
tab_width = 4

[{*.yaml,*.json}]
indent_size = 2

[*.sql]
indent_size = 2

[*.js]
indent_size = 2

[{*.md,*.mdx}]
max_line_length = 500
indent_size = 2

[*.html]
max_line_length = 500
indent_size = 2
